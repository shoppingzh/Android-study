<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="演示ProgressBar进度条"/>

    <Button
        android:id="@+id/show_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示/关闭进度条"/>

    <Button
        android:id="@+id/show_progress_bar_hor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水平进度条++"/>

    <Button
        android:id="@+id/show_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开弹出对话框"/>

    <Button
        android:id="@+id/show_progress_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开进度对话框"/>

    <!-- 进度条 -->
    <ProgressBar
    android:id="@+id/progress_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    />

    <!-- 水平进度条 -->
    <ProgressBar
        android:id="@+id/progress_bar_hor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        />

</LinearLayout>